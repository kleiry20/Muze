<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_gradient"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/register_head_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create your account here"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />


        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_head_textview"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_design"
            android:hint="Enter Phone Number"
            android:maxLength="10"
            android:padding="20dp"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_phone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_design"
            android:hint="Enter Name"
            android:padding="20dp"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_design"
            android:hint="Enter Password"
            android:inputType="textPassword"

            android:padding="20dp"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Now!"
        android:layout_below="@id/register_password"
        android:layout_margin="20dp"
        android:background="@color/colorPrimaryDark"
        android:padding="20dp"
        />


</RelativeLayout>